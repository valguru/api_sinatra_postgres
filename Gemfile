source 'https://rubygems.org'

gem 'sinatra'

# другие зависимости
# gem 'haml'  # если планируется использовать шаблоны haml

gem 'thin'
gem 'rack'
gem 'rackup'
gem 'webrick'
gem 'puma'
gem 'falcon'
gem 'sinatra-contrib'

gem 'sequel'                  # Для работы с базой данных PostgreSQL через Sequel
gem 'sequel-seed'             # Для выполнения миграций и начальных данных
gem 'pg'                      # Для работы с PostgreSQL

gem 'rake'

gem 'dotenv'                  # Для работы с переменными окружения
gem 'json'                    # Для работы с JSON
gem 'multi_json'              # Дополнительная поддержка JSON


